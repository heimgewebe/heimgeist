{
  "$id": "https://heimgewebe/contracts/heimgeist/self_state.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Heimgeist Self-State",
  "description": "Zustandsobjekt (kein Event, kein Artifact).",
  "type": "object",
  "required": [
    "confidence",
    "fatigue",
    "risk_tension",
    "autonomy_level",
    "last_updated",
    "basis_signals"
  ],
  "properties": {
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "fatigue": { "type": "number", "minimum": 0, "maximum": 1 },
    "risk_tension": { "type": "number", "minimum": 0, "maximum": 1 },
    "autonomy_level": { "type": "string", "enum": ["dormant", "aware", "reflective", "critical"] },
    "last_updated": { "type": "string", "format": "date-time" },
    "basis_signals": { "type": "array", "items": { "type": "string" } }
  },
  "additionalProperties": false
}
