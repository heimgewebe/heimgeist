{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Knowledge Observatory Published Event",
  "type": "object",
  "properties": {
    "observatory_id": { "type": "string" },
    "generated_at": { "type": "string", "format": "date-time" },
    "source": { "type": "string" },
    "topics": {
      "type": "array",
      "items": { "type": "string" }
    },
    "signals": { "type": "object" },
    "blind_spots": {
      "type": "array",
      "items": { "type": "string" }
    },
    "considered_but_rejected": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "required": [
    "observatory_id",
    "generated_at",
    "source"
  ],
  "additionalProperties": true
}
