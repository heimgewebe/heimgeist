{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.heimgewebe.org/contracts/knowledge/knowledge.observatory.v1.schema.json",
  "title": "Knowledge Observatory Artifact",
  "type": "object",
  "properties": {
    "observatory_id": { "type": "string" },
    "generated_at": { "type": "string", "format": "date-time" },
    "source": { "type": "string" },
    "topics": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" }
        },
        "required": ["name"]
      }
    },
    "signals": {
      "type": "object",
      "additionalProperties": true
    },
    "blind_spots": {
      "type": "array",
      "items": { "type": "string" }
    },
    "considered_but_rejected": {
      "type": "array",
      "items": { "type": "string" }
    },
    "counts": {
      "type": "object",
      "properties": {
        "total": { "type": "integer" }
      }
    }
  },
  "required": [
    "observatory_id",
    "generated_at",
    "source"
  ],
  "additionalProperties": false
}
